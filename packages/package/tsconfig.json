{
  "compilerOptions": {
    "target": "ES5", // ECMAScript 5 버전으로 트랜스파일합니다.
    "module": "ESNext", // 최신 ECMAScript 모듈 시스템을 사용합니다.
    "moduleResolution": "node", // Node.js 방식으로 모듈을 찾습니다 (Node.js의 모듈 탐색 규칙을 따릅니다).
    "jsx": "react-jsx", // React의 JSX 문법을 사용합니다.
    "strict": true, // 엄격한 타입 검사를 활성화합니다 (strict mode).
    "esModuleInterop": true, // CommonJS 모듈을 ES6 방식으로 import 할 때 상호 운용성을 제공하도록 설정합니다.
    "skipLibCheck": true, // 타입 정의 파일(.d.ts)의 타입 검사를 건너뜁니다.
    "forceConsistentCasingInFileNames": true, // 파일 이름에서 대소문자 일관성을 강제합니다.
    "baseUrl": ".", // 모듈을 찾을 기본 디렉토리를 현재 프로젝트 루트로 설정합니다.
    "outDir": "dist" // 컴파일된 파일을 출력할 디렉토리로 dist를 지정합니다.
  },
  "include": ["src"] // 컴파일할 파일을 포함할 디렉토리로 src 폴더를 지정합니다.
}
